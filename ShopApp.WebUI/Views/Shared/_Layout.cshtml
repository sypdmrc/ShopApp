                                <i class="fa fa-check-circle" aria-hidden="true"></i>
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                <small>Error Message</small>
                            </div>

                            <button id="loginBtn" type="submit" class="text-uppercase">sign in</button>

                        </form>

                    </div>


                </div>

            </div>
        </div>
    </div>

