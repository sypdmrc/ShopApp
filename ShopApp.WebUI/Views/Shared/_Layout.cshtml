                                <i class="fa fa-check-circle" aria-hidden="true"></i>
                                <i class="fa fa-exclamation-circle" aria-hidden="true"></i>
                                <small>Error Message</small>
                            </div>

                            <button type="submit" id="registerBtn" class="text-uppercase">submıt</button>
                            <button type="reset" id="resetBtn" class="text-uppercase">clear</button>

                        </form>

                    </div>








                </div>






            </div>
        </div>
    </div>

    <!-- Modal Register End -->
    <!-- Modal Login Start -->

    <div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">

        <div class="modal-dialog" role="document">

            <div class="modal-content">

                <div id="loginTitle" class="modal-header">
                    <h5 class="modal-title"> SIGN IN</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>


                <div class="modal-body">


                    <div class="form-group">

                        <form id="formLogin">

                            <div class="fc">
